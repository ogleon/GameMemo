<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lion.coding.gamememo">

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_default"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_default"
        android:supportsRtl="true"
        android:theme="@style/Theme.GameMemo">
        <activity
            android:name=".views.ResultActivity"
            android:exported="false" />
        <activity
            android:name=".views.GameActivity2"
            android:exported="false" />
        <activity
            android:name=".views.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.MenuActivity"
            android:exported="true" />
        <activity
            android:name=".views.GameActivity"
            android:exported="true" />
    </application>

</manifest>